<?xml version="1.0" encoding="utf-8"?>
<resources>
 	<style name="ButtonText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item> <!-- fill_parent -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_colors</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="CategoryButton">
        <item name="android:layout_width">145sp</item>
        <item name="android:layout_height">55sp</item>
    </style>

    <style name="LineButton">
        <item name="android:layout_width">65sp</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:background">@drawable/state_button_wide</item>
        <item name="android:textColor">@color/text_colors</item>
        <item name="android:textSize">9pt</item>
    </style>
    
    <!-- Arrival Time styles -->
    <style name="DirectionRadio">
        <item name="android:layout_width">20dip</item> 
		<item name="android:layout_height">20dip</item>
		<item name="android:gravity">left</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">5dip</item>
		<item name="android:background">@drawable/checkbox_notactive</item>
		</style>

    <style name="DirectionLabel">
        <item name="android:layout_width">wrap_content</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:scrollHorizontally">true</item>
   		<item name="android:ellipsize">end</item>
		<item name="android:lines">1</item>
   		<item name="android:textSize">20sp</item>
    </style>
    
    <style name="ArrivalTimeRow">
        <item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">0dip</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
    <style name="StationArrivalTime">
        <item name="android:layout_width">60sp</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:gravity">left</item>
  		<item name="android:lines">1</item>
   		<item name="android:textSize">18sp</item>
    </style>
    <style name="StationLabel">
        <item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left</item>
  		<item name="android:lines">1</item>
   		<item name="android:ellipsize">end</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginLeft">10dip</item>
	</style>
    
    <!-- Connection Arrival time styles -->
    <style name="ConnectionArrivalTimeSpacer">
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">right</item>
  		<item name="android:lines">1</item>
   		<item name="android:ellipsize">end</item>
    </style>
    <style name="ConnectionArrivalTime">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left</item>
  		<item name="android:lines">1</item>
   		<item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ConnectionArrivalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
  		<item name="android:lines">1</item>
   		<item name="android:ellipsize">end</item>
		<item name="android:gravity">left</item>
   		<item name="android:textSize">16sp</item>
    </style>
    
</resources>
