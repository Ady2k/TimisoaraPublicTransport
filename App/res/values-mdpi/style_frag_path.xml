<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LikeTitleContainer">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:layout_marginBottom">0dp</item>
    	<item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="LikeTitleIcon">
        <item name="android:layout_width">55dp</item>
		<item name="android:layout_marginTop">2.3dp</item>
		<item name="android:layout_marginBottom">2.3dp</item>
		<item name="android:layout_marginRight">4.6dp</item>
        <item name="android:layout_marginLeft">4.6dp</item>
	</style>
    <style name="TitleIconWithBack" parent="LikeTitleIcon">
        <item name="android:layout_marginLeft">0dp</item>
	</style>
    <style name="StationBullet" parent="LikeTitleIcon">
    	<item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">59.6dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:layout_marginBottom">0dp</item>
	</style>
    
    
    <style name="MoreOptionsButton">
        <item name="android:layout_width">20.0dp</item>
        <item name="android:layout_height">38.4dp</item>
    </style>
    <style name="PathRightArrow">
        <item name="android:layout_width">20.0dp</item>
        <item name="android:layout_height">38.4dp</item>
    </style>
    <style name="PathLineLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">-10sp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="LineBullet">
        <item name="android:layout_width">15.0dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    	
    <style name="LineVehicle">
        <item name="android:layout_width">24.0dp</item>
        <item name="android:layout_height">24.0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="VehicleArrivingBullet" parent="LineVehicle">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="VehicleBoardingBullet" parent="LineVehicle">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="VehicleDepartingBullet" parent="LineVehicle">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_alignParentBottom">true</item>      
    </style>
</resources>
