<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/florin_bg"
    android:id="@+id/MainView"
    >
    
<ScrollView 
	android:id="@+id/ScrollView01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	>
<TableLayout 
	android:id="@+id/TableLayout" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:gravity="center"
	    >
		<Button	style="@style/LineButton" android:id="@+id/bTv1"
			android:text=" Tv1 "/>
		<Button	style="@style/LineButton" android:id="@+id/bTv2"
			android:text=" Tv2 "/>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_marginTop="20dp"
	    >
		<Button	style="@style/LineButton" android:id="@+id/bTv4"
			android:text=" Tv4 "/>
		<Button	style="@style/LineButton" android:id="@+id/bTv5"
			android:text=" Tv5 "/>
		<Button	style="@style/LineButton" android:id="@+id/bTv6"
			android:text=" Tv6 "/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
	    android:layout_marginTop="20dp"
		>
		<Button	style="@style/LineButton" android:id="@+id/bTv7"
			android:text=" Tv7 "/>
		<Button	style="@style/LineButton" android:id="@+id/bTv8"
			android:text=" Tv8 "/>
		<Button	style="@style/LineButton" android:id="@+id/bTv9"
			android:text=" Tv9 "/>
	</LinearLayout>
</TableLayout>
</ScrollView>

</LinearLayout>

