<TableRow xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/StationStatusRow"
	android:background="@drawable/conn_row_odd"
	style="@style/ArrivalTimeRow"
	>

 	<LinearLayout
   	    android:id="@+id/linearLayout1"
   	    android:layout_marginLeft="20dp"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content">

 	   	<TextView android:id="@+id/StationTime"
 	   	    style="@style/ConnectionArrivalTime"
			android:textColor="#FFFFFFFF"
			android:background="#C8C02000"
	  		android:text="3min"
	   	/>
  	    
	   	<TextView android:id="@+id/LineName"
	   	    style="@style/ConnectionArrivalText"
			android:layout_marginLeft="5dp"
			android:textColor="#FFFFFFFF"
	  		android:text="33"
	   	/>
	   	<TextView android:id="@+id/LineArrow"
	   	    style="@style/ConnectionArrivalText"
			android:textColor="#FFFFFFFF"
	  		android:text=" > "
	   	/>
	   	<TextView android:id="@+id/LineDirection"
	   	    style="@style/ConnectionArrivalText"
			android:textColor="#FFFFFFFF"
	  		android:text="Arta textila"
	   	/>
   	</LinearLayout>
</TableRow>
