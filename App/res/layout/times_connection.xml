<TableRow xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/StationStatusRow"
	android:background="#80000000"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">

	<TextView android:id="@+id/Spacer"
		android:layout_width="20pt" 
		android:layout_height="wrap_content"
		android:textColor="#FFFFFFFF"
		android:gravity="right"
  		android:text=""
   		android:textSize="6.5pt"
   	/>
    
  	<LinearLayout
   	    android:id="@+id/linearLayout1"
		android:background="#80606060"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content">

 	   	<TextView android:id="@+id/StationTime"
			android:layout_width="30pt" 
			android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
			android:gravity="left"
	  		android:text="3min"
	   		android:textSize="6.5pt"
	   	/>
  	    
	   	<TextView android:id="@+id/LineName"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5pt"
			android:textColor="#FFFFFFFF"
			android:gravity="right"
	  		android:text="33"
	   		android:textSize="6.5pt"
	   	/>
	   	<TextView android:id="@+id/LineArrow"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
			android:gravity="right"
	  		android:text=" > "
	   		android:textSize="6.5pt"
	   	/>
	   	<TextView android:id="@+id/LineDirection"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
	  		android:text="Arta textila"
	   		android:textSize="6.5pt"
	   		android:singleLine="true"
	   		android:ellipsize="marquee"
	   	/>
   	</LinearLayout>
</TableRow>
